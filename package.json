{
  "name": "date-token-format",
  "version": "0.1.7",
  "description": "A lightweight, locale aware formatter for strings containing unicode date tokens.",
  "author": "Donovan Hutchinson",
  "repository": {
    "type": "git",
    "url": "https://github.com/donovanh/date-token-format"
  },
  "keywords": [
    "date",
    "format",
    "unicode",
    "international"
  ],
  "license": "ISC",
  "module": "lib/esm/index.js",
  "main": "lib/cjs/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build:browser": "tsc --project ./tsconfig.browser.json",
    "build:node": "tsc --project ./tsconfig.node.json",
    "test": "cross-env NODE_ICU_DATA=node_modules/full-icu jest",
    "watch": "npm test -- --watch",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.node.json && tslint -p tsconfig.browser.json",
    "prepare": "npm run build:browser && npm run build:node",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.5",
    "@types/jest": "^26.0.24",
    "babel-jest": "^27.4.5",
    "cross-env": "^7.0.3",
    "full-icu": "^1.4.0",
    "jest": "^26.6.3",
    "prettier": "^2.5.1",
    "ts-jest": "^26.5.6",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.4"
  }
}
